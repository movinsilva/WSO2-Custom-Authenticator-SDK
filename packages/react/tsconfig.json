{
  "include": ["declarations.d.ts", "src/**/*"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2016",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist/index.d.ts",
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
  }
}
